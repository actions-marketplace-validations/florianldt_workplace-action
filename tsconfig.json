{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "./src",
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "dist", "coverage", "test/*"],
    "include": ["**/*.ts", "**/*.ts", "**/*.config.js"]
}
